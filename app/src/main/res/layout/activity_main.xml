<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="900dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etxtName"
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@android:color/holo_red_dark"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/productName"
        app:layout_constraintBottom_toTopOf="@+id/etxPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etxPrice"
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@android:color/holo_red_dark"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/productPrice"
        app:layout_constraintBottom_toTopOf="@+id/extValidity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxtName" />

    <EditText
        android:id="@+id/extValidity"
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@android:color/holo_red_dark"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/productVal"
        app:layout_constraintBottom_toTopOf="@+id/extQuantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxPrice" />

    <EditText
        android:id="@+id/extQuantity"
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="47dp"
        android:layout_weight="1"
        android:background="@android:color/holo_red_dark"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/productQt"
        app:layout_constraintBottom_toTopOf="@+id/btnRegist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extValidity" />

    <Button
        android:id="@+id/btnRegist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="@string/buttonRegist"
        app:layout_constraintBottom_toTopOf="@+id/btnList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extQuantity" />

    <Button
        android:id="@+id/btnList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="447dp"
        android:text="@string/buttonList"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegist" />

</androidx.constraintlayout.widget.ConstraintLayout>